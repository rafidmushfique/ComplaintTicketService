@model LILI_TMS.Models.TblServiceDepartmentTicketAssignment


<div id="modal-placeholder">
    @{
        var message = TempData["msg"].ToString();
        if (!string.IsNullOrEmpty(message))
        {
            <script>
            alert("@message");
            </script>
        
        }
    }

</div>



<!-- Content Header (Page header) -->
<section class="content-header">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="breadcrumb-item"><a href="/DesignationSetup/Index">Designation Setup Information</a></li>
        <li class="breadcrumb-item active">Add Designation Setup Information</li>
        </ol>
 
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-sm-10">

                        <form class="form-horizontal" enctype="multipart/form-data" asp-controller="ServiceDepartmentTicketAssignmentController" asp-action="CreateAssign" method="post">
                            <div class="form-group">
                                <div class="row">

                                    <label for="inputEmail3" class="col-sm-2 control-label">AssignNo</label>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="AssignNo" class="form-control" placeholder="" readonly="readonly">
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Assign Date</label>
                                    <div class="col-sm-4">
                                        <input type="date" asp-for="AssignDate" class="form-control" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">

                                    <label for="inputEmail3" class="col-sm-2 control-label">Ticket No</label>
                                    <div class="col-sm-4">
                                        <input type="text" asp-for="TicketNo" class="form-control" placeholder="">
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Ticket Date</label>
                                    <div class="col-sm-4">
                                        <input type="date" asp-for="TicketDate" class="form-control" placeholder="">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Department</label>
                                    <div class="col-sm-4">

                                        <select asp-for="ServiceDepartmentCode" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfDepartment,"DepartmentCode","DepartmentName"))" readonly="readonly"></select>


                                        </select>
                                        <span asp-validation-for="ServiceDepartmentCode"></span>
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Complain Type</label>
                                    <div class="col-sm-4">

                                        <select asp-for="ComplainTypeCode" class="form-control" asp-items="@(new SelectList(ViewBag.complainTypes,"ComplainTypeCode","ComplainTypeName"))" required></select>

                                        </select>
                                        <span asp-validation-for="ComplainTypeCode"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Problem Details</label>
                                    <div class="col-sm-4">
                                        <textarea type="text" asp-for="ComplainDetails" class="form-control" placeholder="" readonly="readonly"></textarea> </>
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Machine List</label>
                                    <div class="col-sm-4">

                                        <select asp-for="MachineCode" class="form-control" asp-items="@(new SelectList(ViewBag.machineSetups,"MachineCode","MachineName"))" required></select>

                                        </select>
                                        <span asp-validation-for="MachineCode"></span>
                                    </div>


                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Comments</label>
                                    <div class="col-sm-4">
                                        <textarea type="text" asp-for="Comments" class="form-control" placeholder="" readonly="readonly"></textarea>
                                    </div>
                                    <label for="inputEmail3" class="col-sm-2 control-label">Severity evel</label>
                                    <div class="col-sm-4">

                                        <select asp-for="SeverityLevelCode" class="form-control" asp-items="@(new SelectList(ViewBag.severityLevels,"SeverityLevelCode","SeverityLevelName"))" required></select>

                                        </select>
                                        <span asp-validation-for="SeverityLevelCode"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Approver</label>
                                    <div class="col-sm-4">

                                        <select asp-for="ApproverCode" class="form-control" asp-items="@(new SelectList(ViewBag.ApproverList,"ApproverCode","ApproverName"))" required></select>

                                        </select>
                                        <span asp-validation-for="ApproverCode"></span>
                                    </div>

                                    <label for="inputEmail3" class="col-sm-2 control-label">Approver Comments</label>
                                    <div class="col-sm-4">
                                        <textarea type="text" asp-for="ApproverComments" class="form-control" placeholder="" readonly="readonly"></textarea>
                                    </div>

                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12 text-left">
                                            <a class="btn btn-info pl-5 pr-5">Ticket Assignment</a>

                                        </div>

                                    </div>

                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="row">
                                                <label for="inputEmail3" class="col-sm-2 control-label">Department</label>
                                                <div class="col-sm-4">

                                                    <select asp-for="DepartmentCode" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfDepartment,"DepartmentCode","DepartmentName"))" required></select>


                                                    </select>
                                                    <span asp-validation-for="DepartmentCode"></span>
                                                </div>

                                                <label for="inputEmail3" class="col-sm-2 control-label">Assign To</label>
                                                <div class="col-sm-4">

                                                    <select asp-for="ApproverCode" class="form-control" asp-items="@(new SelectList(ViewBag.ApproverList,"ApproverCode","ApproverName"))" required></select>

                                                    </select>
                                                    <span asp-validation-for="ComplainTypeCode"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <label for="inputEmail3" class="col-sm-2 control-label">Comments</label>
                                                <div class="col-sm-8">
                                                    <textarea type="text" asp-for="ApproverComments" class="form-control" placeholder=""></textarea>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-12 text-center">
                                            <a class="btn btn-mini btn-primary" href='@Url.Content("/ComplainTicketInfo/Index")'>Cancel</a>

                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>

                                    </div>


                                </div>
                            </div>

                        </form>





                    </div>

                </div>

            </div>


    </div>
    </div>
    <!-- /.box -->
</section>




<script type="text/javascript">


    
</script>
